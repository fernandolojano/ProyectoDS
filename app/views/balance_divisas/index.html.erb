<p id="notice"><%= notice %></p>

<h1>Balance Divisas</h1>

<table>
  <thead>
    <tr>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balance_divisas.each do |balance_divisa| %>
      <tr>
        <td><%= balance_divisa.valor %></td>
        <td><%= link_to 'Show', balance_divisa %></td>
        <td><%= link_to 'Edit', edit_balance_divisa_path(balance_divisa) %></td>
        <td><%= link_to 'Destroy', balance_divisa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

